server {
  listen 80;
  server_name olympics_gcp.openmindx.fr;

  # Chemin vers le dossier build√© sur la VM
  root /opt/angular-app/dist/olympic-games-starter;
  index index.html;

  location / {
    try_files $uri $uri/ /index.html;
  }

  # Cache pour les assets statiques
  location ~* \.(js|css|png|jpg|jpeg|gif|ico|json)$ {
    expires 1y;
    add_header Cache-Control "public, immutable";
  }
}

